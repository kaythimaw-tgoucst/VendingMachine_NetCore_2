@model IEnumerable<VendingMachine.Models.Product>

@{
    ViewData["Title"] = "Purchase";
}

<h1>Purchase</h1>
<div class="row">
    <div class="col-md-4">
        <form asp-action="Purchase" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <table class="table">
                    <thead>
                        <tr>
                            <th>
                                @Html.DisplayNameFor(model => model.Name)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Price)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.QuantityAvailable)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.PurchaseQuantity)
                            </th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    <input type="hidden" asp-for="@item.ID" />
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Name)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Price)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.QuantityAvailable)
                                </td>
                                <td>
                                    <input asp-for="@item.PurchaseQuantity" class="form-control" value="@item.PurchaseQuantity" />
                                    <span asp-validation-for="@item.PurchaseQuantity" class="text-danger"></span>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
            <div class="form-group">
                <input type="submit" value="Purchase" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

